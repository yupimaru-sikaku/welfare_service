<%= form_for @user, url: signups_path, method: :post, html: {class: 'third-wrapper__box'} do |f| %>
  <%= f.label :phone_number, "電話番号" %>
  <%= f.text_field :phone_number, placeholder: '自宅・携帯番号どちらでも可' %>
  <%= f.label :birthdate_year, "誕生年" %>
  <%= f.text_field :birthdate_year, placeholder: '1992' %>
  <%= f.label :birthdate_month, "誕生月" %>
  <%= f.text_field :birthdate_month, placeholder: '03' %>
  <%= f.label :birthdate_day, "誕生日" %>
  <%= f.text_field :birthdate_day, placeholder: '11' %>
  <%= f.submit '送信' %>
<% end %>