<%= form_for @user, url: step3_signups_path, method: :get, html: {class: 'second-wrapper__box'} do |f| %>
  <%= f.label :last_name, "苗字" %>
  <%= f.text_field :last_name, placeholder: '山田' %>
  <%= f.label :first_name, "名前" %>
  <%= f.text_field :first_name, placeholder: '太郎' %>
  <%= f.label :last_name_kana, "苗字（カナ）" %>
  <%= f.text_field :last_name_kana, placeholder: 'ヤマダ' %>
  <%= f.label :firtst_name_kana, "名前（カナ）" %>
  <%= f.text_field :first_name_kana, placeholder: 'タロウ' %>
  <%= f.submit '次へ' %>
<% end %>