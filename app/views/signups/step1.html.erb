<%= form_for @user, url: step2_signups_path, method: :get, html: {class: 'first-main__box'} do |f| %>
  <%= f.label :nickname, "ニックネーム" %>
  <%= f.text_field :nickname, placeholder: 'ゆぴまる' %>
  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email, placeholder: 'yupimaru@gmail.com' %>
  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password, placeholder: '6文字以上' %>
  <%= f.label :password_confirmation, "パスワード（確認用）" %>
  <%= f.password_field :password_confirmation, placeholder: '6文字以上' %>
  <%= f.submit '次へ' %>
<% end %>