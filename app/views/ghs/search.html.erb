<%#ヘッダー%>
<%= render partial: "shared/header" %>
<%#//ヘッダー%>

<%#検索結果%>
<div class="gh-search-content">

  <%#検索結果ヒット数%>
  <div class="gh-search-result-count">
    <%= "検索ヒット数: #{@results.count}件" %>
  </div>
  <%#//検索結果ヒット数%>

  <%#検索結果全体%>
  <div class="gh-search-results">

    <%#検索結果一覧%>
    <% if @results.length != 0 %>      
      <% @results.each do |result| %>
        <%= link_to  "#" do %>
          <div class="gh-search-result">
            <div class="gh-search-result-name">
              <%= "#{result.name}" %>
            </div>
            <div class="gh-search-result-content">
              <div class="gh-search-result-content-img">
                <%= image_tag  "sazanka.png" %>
              </div>
              <div class="gh-search-result-content-info">
                <p><%= "#{result.station}駅から徒歩#{FromStation.find(params[:q][:from_station_id_eq]).name}" %></p>
                <p><%= "預り金： #{result.price.to_s(:delimited)}円" %></p>
                <p><%= "#{ResidentialStyle.find(params[:q][:residential_style_id_eq]).name}" %></p>
                <p><%= "築年数: #{Gender.find(params[:q][:gender_id_eq]).name}" %></p>
              </div>
            </div>
            <div class="gh-search-result-form">
              <%= link_to "#" do %>
                <i class="fas fa-comments"></i>
                <span>事業者とチャット</span>
              <% end %>
              <%= link_to "#" do %>
                <i class="fas fa-star"></i>
                <span>お気に入り</span>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      該当する事業所はありません
    <% end %>
    <%#//検索結果一覧%>

  </div>
  <%#//検索結果全体%>
  
</div>